        <div class="issue_labels">
          <!--<h2 class="issue_labels_header">Labels</h2>-->
          {{#each issue.labels}}
            <a href="{{generateUrlForLabel this.name}}" class="issue_label_item clearA" style="background-color: #{{this.color}}">{{this.name}}</a>
          {{/each}}
        </div>


        <details class="relevants">
          <summary>
        {{#if isRelevants}}
            Relevant issues and PRs
        {{else}}
            No relevant issues and PRs
        {{/if}}
          </summary>
          {{#if isRelevants}}
            <div class="relevants_container">
              {{#each relevants}}
                  <div class="relevant_item">
                    <div class="column link_date">
                      <a href="{{this.html_url}}" class="relevant_item_link clearA" target="_blank" title="Open on GitHub">{{this.title}}</a>
                      <time datetime="{{dateTimeVal}}">{{dateTimeStr}}</time>
                    </div>
                    <div class="column info">
                      <div class="relevant_type">{{this.type}}</div>
                      <div class="relevant_state {{#if this.isOpen}} open {{/if}}">{{this.state}}</div>
                    </div>
                  </div>
              {{/each}}
            </div>
          {{/if}}
        </details>
      <div class="issue_user">
        <div class="issue_user_avatar" style="background-image: url({{issue.user.avatar_url}})"></div>
        <div class="issue_user_info">
          <a class="issue_user_login clearA" href="{{issue.user.html_url}}" target="_blank">{{issue.user.login}}</a>
          <time datetime="{{parseDateVal issue.created_at}}">{{parseDate issue.created_at}}</time>
        </div>
      </div>
      <div class="issue_body markDown">
        {{{issue.body}}}
      </div>

      <div class="issue_comments" id="issue_comments_container">
        {{#each comments}}
          <div class="issue_comments_item">
            <div class="issue_comments_item_header">
              <div class="issue_comments_item_user_avatar" style="background-image: url({{this.user.avatar_url}})"></div>
              <div class="issue_comments_item_user_info">
                <a href="{{this.user.html_url}}" class="issue_comments_item_user_login clearA" target="_blank">{{this.user.login}}</a>
                <time datetime="{{parseDateVal this.created_at}}">{{parseDate this.created_at}}</time>
              </div>
            </div>
            <div class="issue_comments_item_body markDown">{{{this.body}}}</div>
          </div>
        {{/each}}
      </div>
      <div class="issue_message" id="issue_message_container">
        <div id="chat_button" title="Write a message"><div class="arrow"></div></div>

        {{#if isLogged}}
          <form id="newMessage">
            <div class="newMessage_header">
              <div class="newMessage_header_avatar" style="background-image: url({{realUser.avatar}})"></div>
              <a class="newMessage_header_login clearA" href="{{realUser.url}}" target="_blank">{{realUser.login}}</a>
            </div>
            <textarea name="text" id="textarea_message" placeholder="Write a message ..." style="white-space: pre-wrap;" required></textarea>
            <div class="form_row">
              <div id="formAlert"><span>GitHub Markdown syntax is available</span></div>
              <div class="button_container">
                <input type="submit" value="Send" title="Make a comment on GitHub"  id="sendButton">
              </div>
            </div>
          </form>
        {{else}}
          <a href="https://github.com/login/oauth/authorize?client_id=21d5d0355d245494032c&scope=public_repo" id="loginGitHub" class="clearA">Sign in with GitHub to write a message</a>
        {{/if}}
      </div>
    </main>
  </div>
</div>
<script>
  'use strict';
  let isLogged = "{{isLogged}}" === 'true';
</script>
